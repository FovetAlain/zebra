<div id="connection">
<h1 class="titleh1">Connection</h1>

<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :"Mot de passe"%>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag "Se connecter" %>
  </div>
<% end %>
<%= link_to '< Zebra', root_path %>

</div>


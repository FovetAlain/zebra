<div id="path_category">
	<%= link_to "<	 Retour", categories_path()%>	<span class="link"><%=link_to "Zebra / ", root_path%><%= link_to "category / ",categories_path()%><%=link_to @category.name.downcase, category_path(@category)%></span>
</div>
<h3> Category :</h3>
<div id="category">
	<%= @category.name %> > <br>

</div>
<div id="main_show">
	<% @category.items.each do |item| %> 

		<figure>
			<%=link_to(image_tag(item.photos[0] + "_small.jpg"), item_path(item)) %>
			<figcaption>
				<%= link_to item.marque, item_path(item)%> <br>
				<%= link_to item.description, item_path(item)%> <br>
				<% if item.promotion == nil %>
				<span class="price"><%= item.prix %> €</span>
				<% else %>
				
					<s><%= item.prix %> € </s><br>

					- <%= item.promotion %> % de remise <br>
					<span class="price"><%= item.prix_after %> €</span>
					
					
					<% end %>
				</figcaption>	
			</figure>
	<% end %>

		<% if @category.name == "Promotions" %>
			<% @items.each do |item| %> 

		<figure>
			<%=link_to(image_tag(item.photos[0] + "_small.jpg"), item_path(item)) %>
			<figcaption>
				<%= link_to item.marque, item_path(item)%> <br>
				<%= link_to item.description, item_path(item)%> <br>

					<s><%= item.prix %> € </s><br>

					- <%= item.promotion %> % de remise <br>
					<span class="price"><%= item.prix_after %> €</span>
					
					
					
			</figcaption>	
		</figure>
		<% end %>
	<% end %>
</div>	
